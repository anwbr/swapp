@model ProjectSwapp.Models.SwappPosts
@using (Ajax.BeginForm("ChangeItem", new AjaxOptions
{
    HttpMethod = "POST"
}))
{
    <div class="modal-content">
        <div class="modal-header">
            <h2>Change post</h2>
        </div>
        <div class="modal-body">
            <dl class="dl-horizontal">
                <dt hidden>@Html.TextBoxFor(m => m.Id)</dt>
                <dt>New name: </dt>
                <dd>@Html.TextBoxFor(m => m.Name, new { @class = "form_controlinputCh" })</dd>
                <dt>New description: </dt>
                <dd>@Html.TextAreaFor(m => m.Description, new { @class = "form_controlinputareaCh", @maxlength = "200" })</dd>
            </dl>
        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-success" value="Save" />
            <a href="#" class="btn" data-dismiss="modal">Close</a>
        </div>
    </div>
}