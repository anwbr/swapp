@{
    ViewBag.Title = "Posts";
}
<h2>@ViewBag.Title</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<div class="list">
    <div class="list__content list__content_type_line">
        <div class="list_ads list_ads_type_line">
            @foreach (ProjectSwapp.Models.SwappPosts item in ViewBag.item)
            {
                <article class="list_ads__item">
                    <div class="list_ads__image_container">
                        <a lang="" data-images="/09/0948031340.jpg,/09/0974197290.jpg,/09/0924741211.jpg" class="list_ads__link list_ads__image">
                            @Html.Raw("<img src=\"data:image/jpeg;base64," + Convert.ToBase64String(item.ImageData) + "\" />")
                        </a>
                       
                    </div>
                    <div class="list_ads__info_container">
                        <label class="form_tag">@item.Name</label>
                        <div class="list_ads__date_location">
                            <time class="list_ads__date">Time create: @item.DateCreatePost</time>
                            <time class="list_ads__location"> /Category: @item.SubCategory /Address: @item.Address</time>
                        </div>
                    </div>
                </article>
            }

        </div>
    </div>
</div> 


